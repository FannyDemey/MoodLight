{
  "manifest_version": 2,

  "name": "MoodLight",
  "description": "This extension allow you to select the Playbulb candle color depending on your mood",
  "version": "0.1",

  "browser_action": {
    "default_icon": "icons/icon.png",
    "default_popup": "home.html"
  },
  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/",
    "https://storage.googleapis.com/"
  ],
  "content_security_policy": "script-src 'self' https://storage.googleapis.com/ https://ajax.googleapis.com/ https://cdnjs.cloudflare.com; object-src 'self'"
}